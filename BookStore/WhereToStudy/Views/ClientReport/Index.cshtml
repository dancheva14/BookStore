@using (Html.BeginForm())
{
    <p>
        <div class="form-group input-group-sm">
            <b>Филтрирай по клиент:</b>
            @Html.DropDownListFor(m => m.ClientId, new SelectList(new BookStore.vServices.AddEditDeleteService().GetClients(), "Id", "Name"), "Избери", htmlAttributes: new { @class = "custom-class-for-width" })

            <input type="submit" value="Филтрирай" />
        </div>
    </p>
}
<table id="t01">
    <tr>
        <th>Артикул</th>
        <th>Количество</th>
    </tr>
    @if (Model.Items != null)
    {
        foreach (var item in Model.Items)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.Quantity</td>
            </tr>
        }
    }
</table>
<br>

<style>
    table {
        width: 100%;
    }

    table, th, td {
        border: 1px solid black;
        border-collapse: collapse;
    }

    th, td {
        padding: 15px;
        text-align: left;
    }

    table#t01 tr:nth-child(even) {
        background-color: #eee;
    }

    table#t01 tr:nth-child(odd) {
        background-color: #fff;
    }

    table#t01 th {
        background-color: dimgrey;
        color: white;
    }
</style>

<style>
    .custom-class-for-width {
        width: 50%;
        max-width: 50%;
    }
</style>
<style>
    .custom-class-for-label {
        font-size: 20px;
    }
</style>

