@model BookStore.vModel.User
@{
    ViewBag.Title = "Registration";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/Site.css")"
          rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")"
            type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")"
            type="text/javascript"></script>

    <link href="@Url.Content("~/Content/themes/base/jquery.ui.core.css")"
          rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/themes/base/jquery.ui.datepicker.css")"
          rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/themes/base/jquery.ui.theme.css")"
          rel="stylesheet" type="text/css" />

    <script src="@Url.Content("~/Scripts/jquery.ui.core.min.js")"
            type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/jquery.ui.datepicker.min.js")"
            type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/DatePickerReady.js")"
            type="text/javascript"></script>
</head>



<h2>Регистрация</h2>
@using (Html.BeginForm())
{
    <div style="width:800px;">
        <fieldset>
            <div style="float:left; width:380px;">
                <div class="editor-label">@Html.LabelFor(s => s.UserName)</div>
                <div class="editor-field">
                    <input class="form-control"
                           id="UserName"
                           name="UserName"
                           type="text"
                           placeholder="Потребителско име" />
                    @Html.ValidationMessageFor(s => s.UserName)
                </div>

                <div class="editor-label">@Html.LabelFor(s => s.Password)</div>
                <div class="editor-field">
                    <input class="form-control"
                           id="Password"
                           name="Password"
                           type="password"
                           placeholder="Парола" />
                    @Html.ValidationMessageFor(s => s.Password)
                </div>

                <div class="editor-label">@Html.LabelFor(s => s.FirstName)</div>
                <div class="editor-field">
                    <input class="form-control"
                           id="Email"
                           name="FirstName"
                           type="text"
                           placeholder="Име" />
                    @Html.ValidationMessageFor(s => s.FirstName)
                </div>

                <div class="editor-label">@Html.LabelFor(s => s.SurName)</div>
                <div class="editor-field">
                    <input class="form-control"
                           id="SurName"
                           name="SurName"
                           type="text"
                           placeholder="Презиме" />
                    @Html.ValidationMessageFor(s => s.SurName)
                </div>

                <div class="editor-label">@Html.LabelFor(s => s.LastName)</div>
                <div class="editor-field">
                    <input class="form-control"
                           id="LastName"
                           name="LastName"
                           type="text"
                           placeholder="Фамилия" />
                    @Html.ValidationMessageFor(s => s.LastName)
                </div>

                <div class="editor-label">@Html.LabelFor(s => s.Address)</div>
                <div class="editor-field">
                    <input class="form-control"
                           id="Address"
                           name="Address"
                           type="text"
                           placeholder="Адрес" />
                    @Html.ValidationMessageFor(s => s.Address)
                </div>
            </div>

            <div style="float:right;width:380px;">
                <div class="editor-label">@Html.LabelFor(s => s.Email)</div>
                <div class="editor-field">
                    <input class="form-control"
                           id="Email"
                           name="Email"
                           type="text"
                           placeholder="Имейл" />
                    @Html.ValidationMessageFor(s => s.Email)
                </div>

                <div class="editor-label">@Html.LabelFor(s => s.Phone)</div>
                <div class="editor-field">
                    <input class="form-control"
                           id="Phone"
                           name="Phone"
                           type="text"
                           placeholder="Телефон" />
                    @Html.ValidationMessageFor(s => s.Phone)
                </div>

                <div class="editor-label">@Html.LabelFor(s => s.Gender)</div>
                <div class="editor-field">
                    <input class="form-control"
                           id="Gender"
                           name="Gender"
                           type="text"
                           placeholder="Пол" />
                    @Html.ValidationMessageFor(s => s.Gender)
                </div>

                <div class="editor-label">@Html.LabelFor(s => s.Age)</div>
                <div class="editor-field">
                    <input class="form-control"
                           id="Age"
                           name="Age"
                           type="text"
                           placeholder="Възраст" />
                    @Html.ValidationMessageFor(s => s.Age)
                </div>

                <div class="form-group input-group-sm">
                    @Html.LabelFor(model => model.Date)
                    <input class="datefield" data-val="true" data-val-required="Date is required"
                           id="Date" name="Date" type="date" value="1/11/1989" />
                    @Html.ValidationMessageFor(model => model.Date)
                </div>
            </div>

        </fieldset>
            <br />
            <div>
                <input class="col-lg-3" type="submit" value=Регистирай />
            </div>
            <div style="float:right; height: 120px; width:400px; margin:5px; border-style:outset">
                <p></p>
                <div>
                    За успешно регистриране въведете потребителско име,
                    парола, която трябва да е минимум 8 символа,
                    валиден имейл, за контакт
                    и свойте данни.
                </div>
            </div>
    </div>
}


    <script type="text/javascript">
        if (!Modernizr.inputtypes.date) {
            $(function () {
                $("input[type='date']")
                    .datepicker()
                    .get(0)
                    .setAttribute("type", "text");
            })
        };
    </script>